<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NottCS.CustomControls.LabelledValidatableEntry"
             x:Name="LabelledValidatableEntryView">
  <ContentView.Content>
      <StackLayout>
            <Label Text="{Binding Source={x:Reference LabelledValidatableEntryView}, Path=Name}" />
            <Entry x:Name="EntryObject"
                   Text="{Binding Source={x:Reference LabelledValidatableEntryView}, Mode=TwoWay, Path=Value}" 
                   TextChanged="ValidateOnTextChanged">
            </Entry>
      </StackLayout>
  </ContentView.Content>
</ContentView>