<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NottCS.Views.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="PASSWORD RECOVERY" FontSize="Large" Margin="10"/>
            <Label Text="Did you forgot your password?"
                   Margin="5,0"/>
            <Entry x:Name="OWAEntry" Placeholder="OWA Account"
                   Margin="5,0"/>
            <Button Text = "Forget Password"
                    FontSize="Large"
                    HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>