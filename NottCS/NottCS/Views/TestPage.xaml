<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NottCS.Views.TestPage"
             xmlns:flv="clr-namespace:DLToolkit.Forms.Controls;assembly=DLToolkit.Forms.Controls.FlowListView"
             >
    <ContentPage.Content>
        <StackLayout>
            <flv:FlowListView x:Name="flowListView" FlowColumnCount="2" SeparatorVisibility="None" RowHeight="150"
                              FlowUseAbsoluteLayoutInternally="false" FlowColumnExpand="None"
                              FlowItemsSource="{Binding DummyListCollection}" FlowItemTappedCommand="{Binding ItemTappedCommand}">
                <flv:FlowListView.FlowColumnTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" 
                                   XAlign="Center" YAlign="Center" Text="{Binding Name}" LineBreakMode="CharacterWrap"/>
                            <Image Source="{Binding ImageURI}" />
                        </StackLayout>
                    </DataTemplate>
                </flv:FlowListView.FlowColumnTemplate>
            </flv:FlowListView>
            <Label Text="SOMETHING"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>