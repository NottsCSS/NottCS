<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NottCS.Views.LoginPage"
             x:Name="Login Page"
             Title="{Binding Title}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:viewModels="clr-namespace:NottCS.ViewModels;assembly=NottCS"
             xmlns:converters="clr-namespace:NottCS.Converters;assembly=NottCS"
             d:DataContext="{d:DesignInstance viewModels:LoginViewModel}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StringListToStringConverter x:Key="StringListToStringConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Text="NottCS Login"
                   FontSize="Large"
                   VerticalOptions="Start" 
                   HorizontalOptions="CenterAndExpand" />
                <Image x:Name="BannerImage"
                       Aspect="AspectFill"
                       HorizontalOptions="FillAndExpand"
                       Grid.Row="0" Grid.RowSpan="2"/>
                <Image x:Name = "IconOne" 
                       Margin="10,20"
                       HorizontalOptions="Center"
                       VerticalOptions="Fill"
                       Grid.Row="1"
                       Grid.RowSpan="2">
                </Image>
                <ScrollView Grid.Row="3"
                            HorizontalOptions="Center"
                            WidthRequest="500">
                    <StackLayout>
                        <Entry Placeholder="Username (OWA)"
                           Text ="{Binding LoginParameters.Username.Value}"
                           Margin = "30,0,30,0" />
                        <Label Margin = "30,0,0,0"
                           IsVisible="{Binding IsValidUser, Converter={StaticResource InverseBoolConverter}}"
                           TextColor = "Red"
                           FontSize = "Small"
                           Text = "{Binding LoginParameters.Username.Errors, Converter = {StaticResource StringListToStringConverter}}" />
                        <Entry Placeholder="Password"
                           IsPassword="True"
                           Text ="{Binding LoginParameters.Password.Value}"
                           Margin = "30,0,30,0"/>
                        <Label Margin = "30,0,0,0"
                           IsVisible="{Binding IsValidPassword, Converter={StaticResource InverseBoolConverter}}"
                           TextColor = "Red"
                           FontSize = "Small"
                           Text = "{Binding LoginParameters.Password.Errors, Converter = {StaticResource StringListToStringConverter}}" />
                        <Button Text = "LOGIN" Command = "{Binding SignInCommand}" 
                            Margin="50,0,50,0" />
                        <Label  Margin = "50,0,0,0"
                            Text = "REGISTER ACCOUNT"
                            FontSize="Micro"
                            TextColor="{Binding RegisterTextColor}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding RegisterCommand}"
                                          NumberOfTapsRequired="1">
                                </TapGestureRecognizer>
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Margin = "50,10,0,0"
                           Text = "FORGOT PASSWORD?"
                           FontSize="Micro"
                           TextColor="{Binding ForgotPasswordTextColor}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}"
                                                  NumberOfTapsRequired="1">
                                </TapGestureRecognizer>
                            </Label.GestureRecognizers>
                        </Label>
                        <ActivityIndicator Color="Green" IsRunning="{Binding IsBusy}" />

                    </StackLayout>
                </ScrollView>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>