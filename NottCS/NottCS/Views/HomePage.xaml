<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NottCS.Views.HomePage"
             x:Name="HomePage"
             Title="{Binding Title}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:viewModels="clr-namespace:NottCS.ViewModels;assembly=NottCS"
             xmlns:models="clr-namespace:NottCS.Models;assembly=NottCS"
             d:DataContext="{d:DesignInstance viewModels:HomeViewModel}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <x:Double x:Key="HorizontalMargin">5</x:Double>
            <x:Double x:Key="VerticalMargin">5</x:Double>
            <x:String x:Key="EventNameFontSize">Medium</x:String>
            <x:String x:Key="EventDescriptionFontSize">Small</x:String>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Home"
                   FontSize="Large"
                   Margin="10,10"/>
            <Picker x:Name="ColumnPicker"  
                    HorizontalOptions="FillAndExpand"
                    Margin="5,0"
                    ItemsSource="{Binding ClubTypePickList}"
                    SelectedItem="{Binding SelectedClubType}">
            </Picker>
            <Label Text="{Binding Label1}"/>
            <ListView ItemsSource="{Binding DummyLists}"
                      Margin="3,3,0,0"
                      RowHeight="50"
                      x:Name="SomeList"
                      >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="5" x:Name="Items">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"></RowDefinition>
                                    <RowDefinition Height="20"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="40"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Row="0" 
                                       Grid.Column="0" 
                                       Text="{Binding ClubName}" 
                                       LineBreakMode="TailTruncation" />
                                <Image Grid.Row="0" 
                                       Grid.RowSpan="2" 
                                       Grid.Column="1" 
                                       Source="{Binding ImageURL}" 
                                       Aspect="AspectFill">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Tapped}"
                                                              BindingContext="{Binding Source={x:Reference HomePage}, Path=BindingContext}"
                                                              CommandParameter="{Binding Source={x:Reference Items}, Path=BindingContext}"
                                          NumberOfTapsRequired="1">
                                        </TapGestureRecognizer>
                                    </Image.GestureRecognizers>
                                </Image>
                                    
                                
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>