<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NottCS.Views.RegistrationPage"
             Title ="{Binding Title}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:rootViewModel="clr-namespace:NottCS.ViewModels;assembly=NottCS"
             xmlns:viewModels="clr-namespace:NottCS.ViewModels;assembly=NottCS"
             xmlns:converters="clr-namespace:NottCS.Converters;assembly=NottCS"
             xmlns:behaviors="clr-namespace:NottCS.Behaviors;assembly=NottCS"
             d:DataContext="{d:DesignInstance viewModels:RegistrationViewModel}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StringListToStringConverter x:Key="StringListToStringConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:SelectedItemEventArgsToSelectedItemConverter x:Key="SelectedItemConverter" />
            <converters:TextChangedEventArgsToString x:Key="TextChangedConverter" />
            <Style TargetType ="Entry">
                <Setter Property="Margin" Value="10"/>
                <Setter Property="WidthRequest" Value="500"/>
                <Setter Property="HorizontalOptions" Value="Start"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center">
            <Label FontSize="Large" Margin="10">REGISTRATION</Label>
            <ScrollView>
                <StackLayout>
                    <Entry x:Name="NameEntry" Placeholder="Name" Text="{Binding Name.Value}"/>
                    <Label x:Name="NameErrorMessage"  
                           IsVisible="{Binding IsValidName, Converter={StaticResource InverseBoolConverter}}"
                           TextColor = "Red"
                           FontSize = "Small"
                           Text="{Binding Name.Errors, Converter={StaticResource StringListToStringConverter}}" />
                    <Entry x:Name="OWAEntry" Placeholder="OWA Username" Text="{Binding OWA.Value}"/>
                    <Label x:Name="OWAErrorMessage" 
                           IsVisible="{Binding IsValidOWA, Converter={StaticResource InverseBoolConverter}}"
                           TextColor = "Red"
                           FontSize = "Small"
                           Text="{Binding OWA.Errors, Converter={StaticResource StringListToStringConverter}}" />
                    <Entry x:Name="Password" Placeholder="Password" IsPassword="True" Text="{Binding Password.Value}"/>
                    <Label x:Name="PasswordErrorMessage"
                           IsVisible="{Binding IsValidPassword, Converter={StaticResource InverseBoolConverter}}"
                           TextColor = "Red"
                           FontSize = "Small"
                           Text="{Binding Password.Errors, Converter={StaticResource StringListToStringConverter}}" />
                    <Entry x:Name="StudentIDEntry" Placeholder="Student ID" Text="{Binding StudentID.Value}"/>
                    <Label x:Name="StudentIDErrorMessage"
                           IsVisible="{Binding IsValidStudentID, Converter={StaticResource InverseBoolConverter}}"
                           TextColor = "Red"
                           FontSize = "Small"
                           Text="{Binding StudentID.Errors, Converter={StaticResource StringListToStringConverter}}" />
                    <Entry x:Name="LibraryNumberEntry" Placeholder="Library Number" Text="{Binding LibraryNumber.Value}" />
                    <Label x:Name="LibraryNumberErrorMessage"
                           IsVisible="{Binding IsValidLibraryNumber, Converter={StaticResource InverseBoolConverter}}"
                           TextColor = "Red"
                           FontSize = "Small"
                           Text="{Binding LibraryNumber.Errors, Converter={StaticResource StringListToStringConverter}}" />
                    <Entry x:Name="CourseEntry" Placeholder="Course" Text="{Binding Course}">
                        <Entry.Behaviors>
                            <behaviors:EventToCommandBehavior 
                                Command="{Binding TextChangedCommand}" 
                                EventName="TextChanged" 
                                Converter="{StaticResource TextChangedConverter}"/>
                        </Entry.Behaviors>
                    </Entry>
<!--                    TODO: format the suggestions properly-->
                    <ListView x:Name="CourseSuggestions"
                              ItemsSource="{Binding Suggestions}"
                              CachingStrategy="RecycleElement">
                        <ListView.Behaviors>
                            <behaviors:EventToCommandBehavior 
                                Command="{Binding ItemSelectedCommand}" 
                                EventName="ItemSelected" 
                                Converter="{StaticResource SelectedItemConverter}"/>
                        </ListView.Behaviors> 
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout>
                                        <Label Text="{Binding .}" />
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </ScrollView>
            <Button x:Name="RegisterButton" Text="REGISTER" WidthRequest="300" HeightRequest="50" HorizontalOptions="Start" Margin="10" Command="{Binding RegisterCommand}"/>
            <ActivityIndicator Color="Green" IsRunning="{Binding IsBusy}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>